extends layout

block content
    .container
      .row
        .col-xs-12
          input.form-control#pac-input(placeholder="Ingrese origen", type="text")
      .row
        .col-xs-6       
          button.btn.btn-info.btn-sm(id='autodetectar', type='button') Detectar donde estoy
      
        .col-xs-6       
          button.btn.btn-info.btn-sm(type='button') Marcar en mapa
      .row
        .col-xs-12  
          input.form-control#pac-input(placeholder="Ingrese destino", type="text")
      .row
        .col-xs-6
          button.btn.btn-primary.btn-sm fecha/hora
        .col-xs-6
          button.btn.btn-primary.btn-sm Buscar Servicios    
      div#map
      script
        include logicaMapas.js
      script(async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCpI1dm4HaiIrP5v4B9SNtQ6xdJxNlhwWs&v=3&libraries=places&callback=initMap")
